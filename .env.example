# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ai_trading
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=secure_password_123
DATABASE_URL=postgresql://trading_user:secure_password_123@localhost:5432/ai_trading

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_123
REDIS_URL=redis://:redis_password_123@localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1
DEBUG=true
RELOAD=true

# Security
SECRET_KEY=your_super_secret_key_here_change_in_production
JWT_SECRET=jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
ENCRYPTION_KEY=your_encryption_key_here_32_chars

# Exchange API Keys (Binance)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true
BINANCE_BASE_URL=https://testnet.binancefuture.com

# Machine Learning Configuration
ML_MODEL_PATH=./data/models
ML_TRAINING_DATA_PATH=./data/training
ML_BATCH_SIZE=32
ML_EPOCHS=100
ML_LEARNING_RATE=0.001

# Data Collection
DATA_COLLECTION_INTERVAL=1
HISTORICAL_DATA_DAYS=365
MARKET_DATA_SYMBOLS=BTCUSDT,ETHUSDT
TIMEFRAMES=1m,5m,15m,1h,4h,1d

# Risk Management
DEFAULT_MAX_POSITION_SIZE=10000.00
DEFAULT_MAX_DAILY_LOSS=1000.00
DEFAULT_STOP_LOSS_PERCENTAGE=0.02
DEFAULT_TAKE_PROFIT_PERCENTAGE=0.04

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./data/logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
HEALTH_CHECK_INTERVAL=30

# SSL/TLS
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem
SSL_ENABLED=false

# CORS
CORS_ORIGINS=http://localhost:3000,https://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# WebSocket
WS_MAX_CONNECTIONS=100
WS_HEARTBEAT_INTERVAL=30

# Celery (Background Tasks)
CELERY_BROKER_URL=redis://:redis_password_123@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:redis_password_123@localhost:6379/2

# External APIs
NEWS_API_KEY=your_news_api_key_here
TWITTER_API_KEY=your_twitter_api_key_here
REDDIT_API_KEY=your_reddit_api_key_here

# Development
PYTHONPATH=./backend
ENVIRONMENT=development